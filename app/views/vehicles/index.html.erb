<% if notice %>
  <p id="notice" class="alert alert-success">
    <%= notice %>
  </p>
<% end %>


<h1 class="vehicles-heading">My Vehicles</h1>

<% if @vehicles %>
  <table class="table table-bordered table-hover fit-table">
    <thead>
      <tr>
        <th>Vin</th>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>Miles</th>
        <th>Color</th>
        <th class="text-center">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @vehicles.each do |vehicle| %>
      <tr>
        <td>
          <span class="mobile-heading">vin</span>
          <%= vehicle.vin %>
          <div>
            <small>
              <%= link_to 'Service History', services_vehicle_path(id: vehicle.id) %>
              <span class="text-info">(<%= vehicle.services.count %> entries)</span>
            </small>
          </div>
        </td>
        <td>
          <span class="mobile-heading">year</span>
          <%= vehicle.year %>
        </td>
        <td>
          <span class="mobile-heading">make </span>
          <%= vehicle.make %>
        </td>
        <td>
          <span class="mobile-heading">model</span>
          <%= vehicle.model %>
        </td>
        <td>
          <span class="mobile-heading">miles</span>
          <%= vehicle.miles %>
        </td>
        <td>
          <span class="mobile-heading">color</span>
          <%= vehicle.color %>
        </td>
        <td class="text-center">
          <%= link_to 'Edit', edit_vehicle_path(vehicle), class: "btn btn-info" %>
          <%= link_to 'Destroy' , vehicle, class: "btn btn-danger" , method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary" %>

<% else %>
  <br />
  <br />
  <h3>
    Create Account or Login to access your vehicles
  </h3>
  <%= link_to "Create Account" , new_user_registration_path, class:"btn btn-primary" %>
  <%= link_to "Login" , new_user_session_path, class:"btn btn-primary" %>
<% end %>
