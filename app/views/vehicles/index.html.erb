<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Vin</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Miles</th>
      <th>Color</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
    <tr>
      <td><%= vehicle.vin %></td>
      <td><%= vehicle.year %></td>
      <td><%= vehicle.make %></td>
      <td><%= vehicle.model %></td>
      <td><%= vehicle.miles %></td>
      <td><%= vehicle.color %></td>
      <td><%= link_to 'Show', vehicle %></td>
      <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
      <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vehicle', new_vehicle_path, class: "btn btn-primary" %>